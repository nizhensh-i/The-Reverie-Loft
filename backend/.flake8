[flake8]
per-file-ignores =
    backend/app/api/__init__.py: F401, E402
    backend/app/auth/__init__.py: F401, E402
    backend/app/main/__init__.py: F401, E402
    backend/flasky.py: F401, E402, F403
    # whitespace before ':'
    backend/app/api/upload.py: E203 

exclude = .git,__pycache__,docs/source/conf.py,old,build,dist,venv/,migrations

# 可选：添加行宽配置，避免与 Black 冲突
max-line-length = 120